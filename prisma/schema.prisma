generator client {
  provider = "prisma-client-js"
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String           @id @default(uuid())
  title      String
  created_at DateTime
  dayhabits  DayHabit[]
  weekDays   HabbitWeelDays[]

  @@map("Habits")
}

model Day {
  id   String   @id @default(uuid())
  date DateTime

  //pra n ficar perdido, caso eu me esqueça, isso ta aki pois ta relacionado
  dayHabits DayHabit[]

  @@unique([date]) // Aki ta falando q aki cada registro dentro da tabela day, precisa ter  o campo date unico
  @@map("days")
}

model HabbitWeelDays {
  id       String @id @default(uuid())
  habit_id String
  week_day Int

  //aki mostra q ele se relaciona com a tabela gabit
  habit Habit @relation(fields: [habit_id], references: [id])

  //o msm habito so pode ta disponivel uma vez no msm dia
  @@unique([habit_id, week_day])
  @@map("habbit_week_days")
}

//tabela pivo = tabela que eh gerada apos o relacionamento entre tabelas
model DayHabit {
  id String @id @default(uuid())

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  //aki falando tipo, n posso ter o msm habito completado 2 vezes no msm dia
  @@unique([day_id, habit_id])
  @@map("days_habits")
}

